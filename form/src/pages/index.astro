---
import Layout from './layout/layout.astro';
import Form from './forms/form.astro';
import GoogleFrame from './layout/googleframe.astro';
import Googleframe from './layout/googleframe.astro';
---

<Layout title="Home Page">
  <div class="background-head">
    <section class="boundaries">
      <div class="title-container">
        <h1>Reunión Familiar 2023</h1>
        <h3>Invitación</h3>
      </div>
    </section>
  </div>
  <section class="boundaries form-body">
    <p>
      Confirmar la asistencia con los apellidos de la familia y el número de
      asistentes
    </p>
    <Form />
    <Googleframe />
  </section>
</Layout>

<style lang="scss" is:global>
  @import url('https://rsms.me/inter/inter.css');
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap');

  * {
    margin: 0;
    padding: 0;
    font-family: 'Poppins', sans-serif;
  }

  .background-head {
    background: linear-gradient(45deg, #6e9778, darkgreen);
  }

  .boundaries {
    max-width: 900px;
    margin-inline: auto;
    padding-inline: 2rem;
  }

  body {
    min-height: 100vh;
    font-family: 'Poppins', sans-serif;
    // display: grid;
    // align-items: center;
    background: linear-gradient(
      145deg,
      hsl(0 10% 90% / 1),
      hsl(0deg 2% 88.39%)
    );
  }

  .title-container {
    display: flex;
    align-items: flex-start;
    justify-content: center;

    color: white;
    aspect-ratio: 16 / 3;
    flex-direction: column;
    line-height: 1.4;
  }

  .form-body {
    display: flex;
    flex-direction: column;
    & > * {
      margin-top: 1rem;
    }
  }
</style>
